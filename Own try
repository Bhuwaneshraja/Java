import java.util.Scanner;//3-7-25
class Main{
    public static void main(String args[]){
        Scanner sc=new Scanner(System.in);
        System.out.print("Enter the Number : ");
        int num=sc.nextInt();
        int arr[]=new int[num];
        int evencount=0;
        int oddcount=0;
        for(int i=0;i<num;i++)
        {
            arr[i]=sc.nextInt();
        
            if(arr[i]%2==0)
            {
                evencount = evencount+arr[i];
        }
        else{
                oddcount = oddcount+arr[i];

        }
    }
     System.out.println("Sum of elements at even indices"+evencount);
     System.out.println("Sum of elements at even indices"+oddcount);
}
}
